<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:textColor="#020202"
        android:gravity="center"
        android:text="Thêm Loại"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="10dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_iconLoai"
            android:layout_weight="3"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF5722"/>

        <EditText
            android:layout_weight="7"
            android:hint="Tên loại"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtLoainew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutGhichu"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnAddLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/custom_button"
            android:padding="7dp"
            android:text="Thêm"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnHuy_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/custom_button"
            android:padding="7dp"
            android:text="Hủy"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>